local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TurquoizPlayerColliderCS"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Scaled frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0.0787, 0, 0.0694, 0) -- 200/2540 x 50/1440
frame.Position = UDim2.new(0.5, 0, 0.0347, 0) -- centered top
frame.AnchorPoint = Vector2.new(0.5, 0)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Button fills frame
local button = Instance.new("TextButton")
button.Size = UDim2.new(1, 0, 0.5, 0)
button.Position = UDim2.new(0, 0, 0, 0)
button.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 18
button.Text = "No-Collide: ON"
button.Parent = frame

-- Draggable
local dragging, dragStart, startPos = false, nil, nil
frame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = frame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)
UserInputService.InputChanged:Connect(function(input)
	if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
		local delta = input.Position - dragStart
		frame.Position = UDim2.new(
			startPos.X.Scale,
			startPos.X.Offset + delta.X,
			startPos.Y.Scale,
			startPos.Y.Offset + delta.Y
		)
	end
end)

-- Collision toggle
local originalCanCollide = {}
local noclipEnabled = true

local function updateNoCollide()
	for _, plr in pairs(Players:GetPlayers()) do
		if plr ~= player and plr.Character then
			for _, part in pairs(plr.Character:GetDescendants()) do
				if part:IsA("BasePart") then
					local key = plr.Name .. ":" .. part:GetFullName()
					if noclipEnabled then
						if originalCanCollide[key] == nil then
							originalCanCollide[key] = part.CanCollide
						end
						part.CanCollide = false
					else
						if originalCanCollide[key] ~= nil then
							part.CanCollide = originalCanCollide[key]
						end
					end
				end
			end
		end
	end
end

-- Auto-update every frame
RunService.RenderStepped:Connect(updateNoCollide)

-- Button toggle
button.MouseButton1Click:Connect(function()
	noclipEnabled = not noclipEnabled
	button.Text = "No-Collide: " .. (noclipEnabled and "ON" or "OFF")
	updateNoCollide()
end)

-- Update when players join/leave
Players.PlayerAdded:Connect(updateNoCollide)
Players.PlayerRemoving:Connect(updateNoCollide)
